def get_random_decl(data):
    var = data
    var_gen = choice(genus_list)
    var_decl = choice(decl_list)
    print(var[0], '  ',var_decl, '|', var_gen)
    print(hint_template)
    print(var[-1])
    return '+++++++++++++++++++++++++++++++++++++++++++++'


var = ''

while var != '1':
    random_word = choice(words_list)
    random_decl = get_random_decl(random_word)
    print(random_decl)
    var = input()


print("bye-bye")
